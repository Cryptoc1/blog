<!DOCTYPE html>
<html>

<head>
    <title>{{title}}</title>
    <link href="/icon.png" rel="shortcut icon">
    <link href="/ext.css" rel="stylesheet">
    <script src="/ext.js"></script>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Lora:400,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.0/css/font-awesome.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
    <meta name="theme-color" content="rgba(42, 42, 42, .65)">
    <!-- OpenGraph n shit -->
    <meta property="og:site_name" content="3Bytes Blog">
    <meta property="title" content="{{title}}">
    <meta property="og:title" content="{{title}}">
    <meta property="image" content="https://3bytes.xyz/icon.png">
    <meta property="og:image" content="https://3bytes.xyz/icon.png">
    <meta property="og:image:width" content="200" />
    <meta property="og:image:height" content="200" />
    <meta property="og:locale" content="en_US" />
    {{#if post}}
        <meta property="og:type" content="article">
        <meta property="og:url" content="https://3bytes.xyz/post/{{post._id}}">
        <meta property="description" content="{{post.hint}}">
        <meta property="og:description" content="{{post.hint}}">
        <meta property="article:author" content="{{post.author}}">
        {{#each post.tags}}
            <meta property="article:tag" content="{{this}}">
        {{/each}}

        <!-- Twitter -->
        <meta name="twitter:card" content="summary">
        <meta name="twitter:site" content="@cryptoc1">
        <meta name="twitter:title" content="{{title}}">
        <meta name="twitter:description" content="{{post.hint}}">
        <meta name="twitter:image" content="https://3bytes.xyz/icon.png">
        <meta name="twitter:image:src" content="https://3bytes.xyz/icon.png">
        <meta name="twitter:creator" content="@cryptoc1">
    {{else}}
        <meta property="og:type" content="website">
        <meta property="og:url" content="https://3bytes.xyz/">
    {{/if}}
</head>

<body>
    <div class="loading-bar"></div>
    <div class="container">
        {{{body}}}
    </div>
</body>

</html>
